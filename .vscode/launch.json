  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run RSpec - all",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "command": "/usr/local/bundle/bin/rspec",
      "script": "",
      "args": [
        "--pattern",
        "${workspaceRoot}/spec/**/*_spec.rb"
      ]
    },
    {
      "name": "Debug RSpec - open spec file",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "command": "/usr/local/bundle/bin/rspec",
      "script": "${file}",
      "args": [],
      "askParameters": true
    }
  ]
}